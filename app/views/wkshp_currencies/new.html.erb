<% provide(:page_name, "Currency") %>
<table>
<%= form_for(@currency) do |f| %>

<tr><td>Name: <td><%= f.text_field :name %></td></tr>
<tr><td>Symbol: <td><%= f.text_field :symbol %></td></tr>
<tr><td>Exchange Rate: <td><%= f.text_field :exchange_rate %></td></tr>
<tr><td></td><td align="right"><%= f.submit("Save", :class=>"btn btn-medium btn-secondary")%></td></tr>

<% end %>
</table>